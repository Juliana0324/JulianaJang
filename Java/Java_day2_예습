 import java.util.*;
public class Day2 {

	public static void main(String[] args){
		Scanner sc = new Scanner(System.in);
		System.out.print("이름을 입력:");
		String name =sc.next();
		System.out.print("국어점수입력: ");
		int kor= sc.nextInt();
		System.out.println(name+"님의 국어점수는 "+kor+"점입니다");
	}

}

 


